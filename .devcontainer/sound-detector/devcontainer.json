// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
  "name": "Anesowa Sound Detector",
  "dockerComposeFile": [
    "../../docker-compose.yaml",
    "../../docker-compose.vs-code.yaml"
  ],
  "service": "sound-detector",
  "workspaceFolder": "/app",
  "shutdownAction": "none",
  "customizations": {
    "vscode": {
      "settings": {
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        "editor.defaultFormatter": "ms-python.black-formatter"
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-toolsai.jupyter",
        "ms-python.python",
        "ms-python.black-formatter",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "settings": {
    "launch": {
      "configurations": [
        {
          // Do not run unless you are within the container.
          "name": "Debug Sound Detector",
          "type": "python",
          "request": "launch",
          "cwd": "${workspaceFolder}/sound-detector",
          "program": "${workspaceFolder}/sound-detector/sound_detector.py",
          "console": "integratedTerminal",
        },
      ]
    }
  }
}