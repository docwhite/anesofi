// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
  "name": "Anesowa Sound Player",
  "dockerComposeFile": [
    "../../docker-compose.yaml",
    "../../docker-compose.vs-code.yaml"
  ],
  "service": "sound-player",
  "workspaceFolder": "/app",
  "shutdownAction": "none",
  "customizations": {
    "vscode": {
      "settings": {
        "cmake.sourceDirectory": "${workspaceFolder}/sound-player",
        "cmake.buildDirectory": "${workspaceFolder}/sound-player/build",
        "cmake.configureArgs": [
          "-DBUILD_TYPE=test"
        ],
        "cmake.generator": "Unix Makefiles"
      },
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "settings": {
    "launch": {
      "configurations": [
        {
          // Do not run unless you are within the container.
          "name": "Debug Sound Player",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/sound-player/build/sound_player",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}/sound-player",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "setupCommands": [
            {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
            },
            {
              "description": "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
            }
          ]
        },
      ]
    }
  }
}